{
  "compilerOptions": {
    /* ===== SaÃ­da e entrada ===== */
    "rootDir": "./",
    "outDir": "./dist",
    "noEmit": true,                        
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* ===== MÃ³dulos e resoluÃ§Ã£o ===== */
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "Node16",
    "moduleResolution": "Node16",

    /* ðŸ‘‡ Agora permitido graÃ§as ao noEmit */
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* ===== VerificaÃ§Ãµes e consistÃªncia ===== */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* ===== Ambiente Node ===== */
    "types": ["node"],

    /* ===== Tipos personalizados ===== */
    "typeRoots": ["./types", "./node_modules/@types"],

    /* ===== Build ===== */
    "noEmitOnError": true
  },
  "include": ["**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
